{
  "version": 2,
  "name": "performance-bonus-system",
  "builds": [
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/simple",
      "dest": "/index.html"
    },
    {
      "src": "/complete",
      "dest": "/complete_system.html"
    },
    {
      "src": "/editable",
      "dest": "/editable_system.html"
    },
    {
      "src": "/cloud",
      "dest": "/supabase_system.html"
    },
    {
      "src": "/supabase",
      "dest": "/supabase_system.html"
    },
    {
      "src": "/frontend/(.*)",
      "dest": "/frontend/$1"
    },
    {
      "src": "/(.*\\.(html|css|js|ico|png|jpg|svg|json|txt|xml))",
      "dest": "/$1"
    }
  ],
  "functions": {
    "frontend/src/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "NODE_VERSION": "18"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}