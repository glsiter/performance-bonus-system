{
  "version": 2,
  "name": "performance-bonus-system",
  "builds": [
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/complete_system.html"
    },
    {
      "src": "/simple",
      "dest": "/index.html"
    },
    {
      "src": "/complete",
      "dest": "/complete_system.html"
    },
    {
      "src": "/frontend/(.*)",
      "dest": "/frontend/$1"
    },
    {
      "src": "/(.*\\.(html|css|js|ico|png|jpg|svg))",
      "dest": "/$1"
    }
  ],
  "functions": {
    "frontend/src/**/*.js": {
      "runtime": "@vercel/node@18"
    }
  },
  "env": {
    "NODE_VERSION": "18"
  }
}